<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.easynote">

    <application
        android:name=".EasyNoteApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApp"
        tools:targetApi="31">
        <activity
            android:name=".features.splash.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NoteApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".features.login.LoginActivity"
            android:exported="false"
            android:label=""
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name=".features.register.RegisterActivity"
            android:exported="false"
            android:label=""
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name=".features.main.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main" />

        <activity
            android:name=".features.notedetail.NoteDetailActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".features.forgotpassword.request.ForgotPasswordActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".features.forgotpassword.resetpassword.ResetPasswordActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".features.passcode.PasscodeActivity"
            android:exported="false"
            android:label="" />

    </application>

</manifest>